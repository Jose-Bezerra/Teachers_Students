{% extends 'layout.njk' %}

{% block content %}
  <form class="card" method='POST' action='/teachers'>

    <section 
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/1795800/500x500) no-repeat center center / cover">
    </section>
    
    <section class="details">
      
      <h3>Novo Professor</h3>
      
      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://"">
        </div>
      </div>
     
      <div class="item">
        <div>Professor</div>
        <div>
          <input type="text" name='name' placeholder='Nome do professor'>
        </div>
      </div>
        
      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name='birth'>
        </div>
      </div>
        
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="instrucao">
            <option value="ensino_medio">Médio Completo</option>
            <option value="superior_completo">Superior Completo</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>

          </select>
          </div>
      </div>
        
      
      <div class="item">
      <div>Modalidade de aula</div>
      <div>
       <span> <input type="radio" name='kind' value='P' checked >Presencial</span> 
       <span><input type="radio" name="kind" value='D'> À Distância</span>
      </div>
      </div>
        
      <div class="item">
      <div>Área de atuação</div>
      <div><input type="text" name='services' placeholder='Separe as disciplinas por vírgulas'></div>
      </div>
        

      <button type="submit">Salvar</button>


    </section>

  </form>

{% endblock content %}

